<Window x:Class="PL.BoProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="BoProductWindow" Height="640" Width="800">
    <Grid Name="MainGrid" ShowGridLines="True" Background="pink">
        <Grid.RowDefinitions>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="500*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Name="UpGrid" ShowGridLines="True" HorizontalAlignment="Stretch" Height="auto" Grid.Row="0"
VerticalAlignment="Stretch" Width="auto">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions >
            <Label x:Name="category" Content="category:" HorizontalAlignment="Center" VerticalAlignment="Center" Background="#FFF1B0EA" Width="400" Height="46" FontSize="24" FontWeight="Bold" FontFamily="Verdana Pro Black"/>
        </Grid>
        <ComboBox Name="CategorySelector" Margin="400,0,0,0" BorderBrush="#FFF8D0F3"
/>


    </Grid>
</Window>

