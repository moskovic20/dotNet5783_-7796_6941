<Window x:Class="PL.PlEntity.Order.OrderListForM_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:PL.IvalueConvertor"
        mc:Ignorable="d"
        Title="OrderListForM_Window" Height="600" Width="1100">

    <Window.Resources>

        <local:StatusToHebrew x:Key="statusToHebrew"/>


        <Style x:Key="GroupHeaderStyle" TargetType="{x:Type GroupItem}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type GroupItem}">
                        <Expander x:Name="expander" IsExpanded="False"
                                  Background="Transparent"
                                  Foreground="#2b331f">
                            <Expander.Header>
                                <TextBlock Text="{Binding Name,Converter={StaticResource statusToHebrew}}"
                                               FontSize="14" FontWeight="Bold" Foreground="#FF009BA6" HorizontalAlignment="Right">
                                </TextBlock>
                            </Expander.Header>
                            <ItemsPresenter/>
                        </Expander>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Name="MainGrid" ShowGridLines="False">
        <Grid.ColumnDefinitions>

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="72.669"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Rectangle HorizontalAlignment="Left" Height="72" VerticalAlignment="Center" Width="1100" Fill="#FFF6F6F6" Grid.ColumnSpan="2"/>
        <Button x:Name="GroupByStatus"
                        Style="{StaticResource MaterialDesignOutlinedDarkButton}"
                        Content="קבץ לפי סטטוס" 
                        Click="GroupByStatus_Click"
                        BorderBrush="#FF009BA6" Foreground="#FF009BA6" Margin="29,17,901,24"
                       />

        <Button x:Name="search"
                Click="search_Click"
                HorizontalAlignment="Left"
                Margin="671,20,0,0"
                Width="50" Height="28"
                VerticalAlignment="Top">
            <materialDesign:PackIcon x:Name="iconSearch" Kind="Search" 
                                         Height="14" Width="20" 
                                         OpacityMask="Black" />
        </Button>

        <TextBox x:Name="nameClaientOrID"
                 
            materialDesign:HintAssist.Hint="מספר הזמנה/שם לקוח" 
                 Style="{DynamicResource MaterialDesignDataGridTextColumnEditingStyle}"
                 materialDesign:HintAssist.Foreground="Black"
                                  materialDesign:TextFieldAssist.UnderlineBrush="Black"
                 MaxLength="9"
                 HorizontalAlignment="Left"
                 Margin="741,16,0,0"
                 Width="208" Height="30" VerticalAlignment="Top"
                 RenderTransformOrigin="0.837,0.756"/>

        <DataGrid x:Name="Orders_DateGrid"
                  CanUserAddRows="False"
                  materialDesign:DataGridAssist.CellPadding="10"
                  materialDesign:DataGridAssist.ColumnHeaderPadding="30" 
                  IsTextSearchEnabled="True" 
                  GridLinesVisibility="Horizontal" 
                  AreRowDetailsFrozen="False"
                  AutoGenerateColumns="False"
                  HorizontalGridLinesBrush="Transparent"
                  ScrollViewer.VerticalScrollBarVisibility="Visible" 
                  CanUserDeleteRows="False" 
                  CanUserResizeRows="False"
                  Foreground="Black"
                  IsReadOnly="True"
                  ItemsSource="{Binding}" 
                  HorizontalAlignment="Left"
                  Margin="109,10,0,35"
                  Width="973"
                  Background="{x:Null}" Grid.Row="1
                  " MouseDoubleClick="Orders_DateGrid_MouseDoubleClick">

            <DataGrid.GroupStyle>
                <GroupStyle ContainerStyle="{StaticResource ResourceKey=GroupHeaderStyle}">
                    <GroupStyle.Panel>
                        <ItemsPanelTemplate>
                            <DataGridRowsPresenter/>
                        </ItemsPanelTemplate>
                    </GroupStyle.Panel>
                </GroupStyle>
            </DataGrid.GroupStyle>


            <DataGrid.Columns >
                <DataGridTemplateColumn Header="ארכיון"
                                    MinWidth="10">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Style="{StaticResource MaterialDesignFloatingActionMiniButton}"
                                    Height="30" Width="30"
                                    HorizontalAlignment="Center"
                                    Click="moveOrderToArchives"
                                    >
                                <materialDesign:PackIcon Kind="ArchiveStar"/>
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="בטל"
                                    MinWidth="10">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Style="{StaticResource MaterialDesignFloatingActionMiniButton}"
                                    Height="30" Width="30"
                                    HorizontalAlignment="Center"
                                    Click="CancleOrder_button">
                                <materialDesign:PackIcon Kind="Cancel"/>
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="בוצע"
                                    MinWidth="10">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Style="{StaticResource MaterialDesignFloatingActionMiniButton}"
                                    Height="30" Width="30"
                                    Background="#FFF6F6F6"
                                    HorizontalAlignment="Center"
                                    Click="UpdateDelivary_Click">
                                <materialDesign:PackIcon Kind="Done" Foreground="Gray" />
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="נשלח"
                                    MinWidth="10">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Style="{StaticResource MaterialDesignFloatingActionMiniButton}"
                                    Height="30" Width="30"
                                    Background="#FFF6F6F6"
                                    HorizontalAlignment="Center"
                                    >
                                <materialDesign:PackIcon Kind="TruckShipping" Foreground="Gray"/>
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="סטטוס"
                                    Binding="{Binding Status ,Converter={StaticResource statusToHebrew}}"
                                    MinWidth="100" />

                <DataGridTextColumn Header="מחיר סופי"    
                                    Binding="{Binding TotalPrice}"
                                    MinWidth="100"/>
                <DataGridTextColumn Header="כמות פריטים"    
                                    Binding="{Binding AmountOfItems}"
                                    MinWidth="100"/>
                <DataGridTextColumn Header="שם הלקוח"
                                    Binding="{Binding CustomerName}"
                                    MinWidth="100"/>
                <DataGridTextColumn Header="מספר הזמנה "
                                    Binding="{Binding OrderID}"
                                    MinWidth="100"/>
            </DataGrid.Columns>
        </DataGrid>
        <Label
            HorizontalAlignment="Left"
            Margin="965,0,0,0"
            VerticalAlignment="Center" Height="44"
            RenderTransformOrigin="0.5,0.5" FontSize="16" Content=":חפש הזמנה" Foreground="#DD000000" FontStyle="Italic">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-9.782"/>
                    <RotateTransform/>
                    <TranslateTransform X="-4.828"/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>



    </Grid>
</Window>
