<Window x:Class="PL.Admin.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Admin"
        mc:Ignorable="d"
        Title="AdminWindow" Height="200" Width="300">
    <StackPanel Orientation="Vertical">
        <Button x:Name="products" Content="עבור לרשימת הספרים בחנות" HorizontalAlignment="Stretch" Height="42" Click="products_Click">
        </Button>
        <Button  x:Name="Orders" Content="עבור לרשימת ההזמנות הקיימות" HorizontalAlignment="Stretch" Height="62"/>
        <StackPanel Orientation="Horizontal" Height="81">
            <Button x:Name="NumOfVisitors" Content="מספר פניות" Width="85"/>
            <Button x:Name="password" Content="שינוי סיסמה" Width="103"/>
        </StackPanel>
    </StackPanel>
</Window>
