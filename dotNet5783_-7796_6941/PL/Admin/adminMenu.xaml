<Window x:Class="PL.Admin.adminMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:PL.Admin"
        mc:Ignorable="d"
        Title="adminMenu" Height="650" Width="1000">
    <Grid>
        <Rectangle Margin="0,0,0,585"/>
        <Menu x:Name="AdminMenu" DockPanel.Dock="Top" VerticalAlignment="Top" HorizontalAlignment="Right">
            <MenuItem x:Name="productInMenu" Header="ספרים"
                      Click="productInMenu_Click" FontSize="16" FontFamily="Calibri" Height="29"/>

            <MenuItem x:Name="ordersInMenu"  Header="הזמנות" 
                      Click="ordersInMenu_Click" FontSize="16" FontFamily="Calibri" Height="29"/>

            <MenuItem x:Name="goMainW"  Header="מסך הבית" 
                      Click="goHome_Click" FontSize="16" FontFamily="Calibri" Height="29"/>
        </Menu>
     
    
        <Frame x:Name="adminFrame"
               Height="590" Margin="0,44,2,0"
               VerticalAlignment="Top"/>

    </Grid>
</Window>
