<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="800">
    <StackPanel Orientation="Vertical" >
        <WrapPanel  Orientation="Horizontal"
            x:Name="Options" Height="50" Width="800" VerticalAlignment="Top">
            <Button x:Name="Admin"   Style="{StaticResource MyButtonStyle_1}" Content=" כניסת מנהל " Click="Admin_Click"  />
            <Button x:Name="conectUs"  Style="{StaticResource MyButtonStyle_1}"  Content=" צור קשר " Width="60" Click="conectUs_Click" />
            <Button x:Name="Cart"  Style="{StaticResource MyButtonStyle_1}"  Content=" עגלת קניות " Click="Cart_Click"/>
            <Button x:Name="trakingOrder"  Style="{StaticResource MyButtonStyle_1}" Content=" מעקב הזמנה" Click="trakingOrder_Click" />
            <Button x:Name="ListPrefered" Style="{StaticResource MaterialDesignFloatingActionSecondaryDarkButton}" BorderBrush="#007E8C7F"
                                    Width="35" Height="35" HorizontalAlignment="Left" VerticalAlignment="Top" Click="seePrefered_Click" Background="#FF009BA6">
                <materialDesign:PackIcon Kind="Heart"
                                         Height="20" Width="20" 
                                         OpacityMask="Black" HorizontalAlignment="Center" />
            </Button>
        </WrapPanel >
        <StackPanel Orientation="Horizontal">
            <ComboBox
                x:Name="cmbCategorySelector" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center" Width="400" Height="32" FontSize="22">
            </ComboBox>
            <TextBox Text="בחר סינון על פי קטגוריה מסויימת" Width="182" VerticalAlignment="Stretch"/>
        </StackPanel>
        <!---->
        <Grid x:Name="TVGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition />
            </Grid.RowDefinitions>
            <ListView x:Name="Catalog" HorizontalAlignment="Stretch" VerticalAlignment="Top" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="5" HorizontalAlignment="Stretch"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Vertical" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                            <Image Source="{Binding Image}" HorizontalAlignment="Stretch" VerticalAlignment="Top" Stretch="UniformToFill" />
                            <TextBlock Text="{Binding NameOfBook}" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Foreground="#FF009BA6"/>
                            <TextBlock Text="{Binding Price}" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" />
                            <Button x:Name="addToCart"  Content="הוסף לסל" MouseDoubleClick="addToCard_Click" />
                            <Button x:Name="Prefered" Style="{StaticResource MaterialDesignFloatingActionSecondaryDarkButton}" BorderBrush="#007E8C7F"
                                    Width="35" Height="35" HorizontalAlignment="Left" VerticalAlignment="Top" Click="addToLoved_Click" Background="#FF009BA6">
                                <materialDesign:PackIcon Kind="Heart"
                                         Height="20" Width="20" 
                                         OpacityMask="Black" HorizontalAlignment="Center" />
                            </Button>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
           
        </Grid>

    </StackPanel>


</Window>
